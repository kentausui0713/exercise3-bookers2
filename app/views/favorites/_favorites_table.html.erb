<td id = "favorites_buttons_<%= book.id %>">
 <% if book.favorited_by?(current_user) %>
  <td>
    <%= link_to book.favorites.count, book_favorites_path(book), method: :delete, class:  'fas fa-heart', style: "color: red;", remote: true %>
  </td>
 <% else %>
  <td>
    <%= link_to book.favorites.count, book_favorites_path(book), method: :post, class: 'fas fa-heart', style: "color: blue;", remote: true %>
  </td>
 <% end %>
</td>